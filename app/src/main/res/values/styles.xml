<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="tabStyle">@style/TabLayout</item>
        <item name="fontFamily">@font/acarisans</item>
    </style>

    <style name="ExtendedBtn" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <!-- tab style -->
    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/TabLayoutBg</item>
        <item name="tabTextAppearance">@style/TextAppearance</item>
    </style>
    <style name="TabLayoutBg" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/white</item>
    </style>
    <style name="TextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>